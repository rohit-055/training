      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .watermark-image {
          position: fixed;
          top: 50%;
          left: 50%;
          transform: translate(-100%,-13%) rotate(-30deg);
          opacity: 0.20;
          background-image: url('logo.png'); /* Change this path */
          background-size: contain;
          background-repeat: no-repeat;
          width: 500px;
          height: 500px;
          z-index: 9999;
          pointer-events: none;
          user-select: none;
    }

    .sub-header {
      background: linear-gradient(to right, #f28500, #2e7d32);
      color: white;
      font-size: 12px;
      font-weight: 500;
      padding: 8px 20px;
    }

    .header-bar {
      background-color: var(--primary);
      color: white;
      padding: 15px 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .header-bar img {
      height: 60px;
    }

    .login_section {
      display: flex;
      justify-content: center;
      margin-top: 60px;
    }

    .login_form {
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 400px;
    }

    .login_form h2 {
      color: var(--primary);
      text-align: center;
      margin-bottom: 20px;
    }

    .input_set {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    .input_btn {
      background-color: var(--secondary);
      color: white;
      border: none;
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      cursor: pointer;
      font-weight: 500;
    }

    .input_btn:hover {
      background-color: var(--primary);
    }

    .footer {
      text-align: center;
      margin-top: 40px;
      padding: 20px;
      background-color: var(--primary);
      color: white;
    }
  </style>
