  <!-- LOGIN FORM -->
  <div class="login_section">
      <div class="long_sec_img">
        <img src="/CCTNS & ICJS Training Portal_files/logo1.png" alt="logo1">
      </div>
        <div class="login_form">
        <h2>Login Form</h2>
          
          <% if (typeof errorMsg !== 'undefined' && errorMsg) { %>
    <div class="alert alert-danger" role="alert">
       <%= errorMsg %>
    </div>
          <% } %>
        <form id="loginForm" action="/login" method="POST">
          <div class="login_text"><p>User Name</p></div>
           <input class="input_set" type="text" id="username" name="username" placeholder="Enter Username" required>
            <div class="login_text"><p>Password</p></div>
            <input class="input_set" type="password" id="password" name="password" placeholder="Enter Password" required><br>
            <input type="checkbox" id="admin_login" name="adminlogin">
            <label for="admin_login">Login As Admin</label>
            <p></p>
            <button class="input_btn" type="submit">Login</button>
        </form>
        <p>New? <a href="registration.html">Register Here</a> | <a href="pphqproject.html">Home</a></p>
    </div> 

